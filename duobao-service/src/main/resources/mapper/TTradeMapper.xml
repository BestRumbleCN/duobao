      <arg column="trade_status" jdbcType="TINYINT" javaType="team.wuxie.crowdfunding.domain.enums.TradeStatus" typeHandler="team.wuxie.crowdfunding.util.mybatis.typehandler.TradeStatusTypeHandler" />
      <arg column="trade_type" jdbcType="TINYINT" javaType="team.wuxie.crowdfunding.domain.enums.TradeType" typeHandler="team.wuxie.crowdfunding.util.mybatis.typehandler.TradeTypeHandler" />
